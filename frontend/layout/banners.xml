<?xml version="1.0"?>
<layout version="0.1.0">
	<default>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>js/jquery.js</name></action>
			<action method="addItem"><type>skin_js</type><name>js/nivo-slider.js</name></action>
			<action method="addItem"><type>skin_css</type><name>css/nivo-slider.css</name></action>
		</reference>
	</default>
	<banners_index_index>
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
		</reference>
		<reference name="content">
			<block type="banners/render" name="banners" template="dzinehub/banners.phtml"></block>
		</reference>
	</banners_index_index>
</layout>